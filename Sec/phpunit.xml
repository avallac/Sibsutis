<phpunit convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="true">

    <filter>
        <whitelist>
            <directory>classes/ProtectData</directory>
            <exclude>
                <directory>classes/ProtectData/Test</directory>
            </exclude>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html"
             target="report/"
             charset="UTF-8"
             yui="true"
             highlight="true"
             lowUpperBound="35" highLowerBound="70" />
    </logging>

</phpunit>
